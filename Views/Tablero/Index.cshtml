@using RehacerTPS.ViewModels;
@model IndexTablerosViewModel;
<h1 class="text-center font-weight-bold mb-4">Tableros</h1>
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col"hidden>Id</th>
            <th scope="col"hidden>Id_Usuario_Propietario</th>
            <th scope="col">Nombre</th>
            <th scope="col">Descripcion</th>
            <th scope="col">Nombre de Usuario Propietario</th>
            @* Considero que no va *@
            @* <th></th>
            <th></th> *@
        </tr>
    </thead>
    <tbody>
        @foreach (var tab in Model.tableros)
        {
            <tr>
                <td hidden>@tab.id></td>
                <td hidden>@tab.id_usuario_asignado></td>
                <td>@tab.nombre</td>
                <td>@tab.descripcion</td>
                <td>@tab.nombreDeUsuario</td>
                @* CONSIDERO QUE NO VA EN ESTA VISTA *@
                @* <td><a asp-controller="Tablero" asp-action="Modificar" asp-route-id="@tab.id" class="btn btn-outline-primary">Modificar</a></td>
                <td><a asp-controller="Tablero" asp-action="Eliminar" asp-route-id="@tab.id" class="btn btn-outline-danger">Eliminar</a></td> *@
            </tr>
        }
    </tbody>
</table>
<div class="btn-group d-flex mx-auto">
    <a asp-controller="Tablero" asp-action="Crear" class="btn btn-success align-middle">Crear Tablero</a>
</div>