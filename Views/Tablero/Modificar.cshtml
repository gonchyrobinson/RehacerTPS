@using RehacerTPS.ViewModels;
@model ModificarTableroViewModel;
<h1 class="text-center font-weight-bold">Modificar</h1>
<form asp-asp-controller="Tablero" asp-action="ModificarP" method="post">
    <input hidden asp-for="@Model.id">
    <input hidden asp-for="@Model.id_usuario_asignado">
    <div class="form-group">
        <label for="nombre_t" asp-for="@Model.nombre"></label>
        <input asp-for="@Model.nombre" class="form-control mb-4" id="nombre_t" value="@Model.nombre">
        <span asp-validation-for="@Model.nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="desc" asp-for="@Model.descripcion"></label>
        <input asp-for="@Model.descripcion" class="form-control mb-4" id="desc">
        <span asp-validation-for="@Model.descripcion" class="text-danger"></span>
    </div>

